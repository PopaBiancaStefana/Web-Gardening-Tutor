<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description" content="A manager for your plants.">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Garden Manager</title>
    <link rel="icon" type="image/x-icon" href="images/favicon.ico" />
    <link rel="stylesheet" href="styles/style_garden_manager.css" />
  </head>

  <body>
    <header class="main-header">
      <div class="container">
        <a class="logo" href="home">
          <img src="images/logo2.webp" alt="Logo" />
        </a>

        <nav>
          <ul class="nav-bar">
            <li><a href="profile">Profile</a></li>
            <li><a href="courses">Courses</a></li>
            <li><a href="leaderboard">Leaderboard</a></li>
          </ul>
        </nav>
      </div>
    </header>

    <main>
      <div class="title-text" id="title-text">
        <h1>Garden <span>manager</span></h1>
        <img src="images/gardening2.webp" alt="Gardening" />
      </div>
    </main>
    <div class="scroll">
      <section class="manager-area" id="manager">
        <ul class="manager-content">
          <li class="manager-left">
            <form
              onsubmit="event.preventDefault();onFormSubmit();"
              autocomplete="off"
            >
              <div>
                <label id="name-label">Name</label>
                <input type="text" name="name" id="name" required />
              </div>
              <div>
                <label id="last-interaction-label">Last interaction</label>
                <input
                  type="date"
                  name="last_interaction"
                  id="last_interaction"
                  required
                />
              </div>
              <div>
                <label id="due-date-label">Due date</label>
                <input type="date" name="due_date" id="due_date" required />
              </div>
              <div>
                <label id="stage-label">Stage</label>
                <select id="stage" name="stage">
                  <option value="seed">Seed</option>
                  <option value="sprout">Sprout</option>
                  <option value="small-plant">Small plant</option>
                  <option value="adult-plant">Adult plant</option>
                </select>
              </div>
              <div>
                <label id="interaction-label">Interaction</label>
                <select id="interaction" name="interaction">
                  <option value="planted">Planted</option>
                  <option value="watered">Watered</option>
                  <option value="fertilized">Fertilized</option>
                  <option value="changed-soil">Changed the soil</option>
                </select>
              </div>
              <div class="add-button" id="add-button">
                <input type="submit" value="Add new plant" />
              </div>
            </form>
          </li>
          <li class="manager-right">
            <table class="list" id="plantList">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Last interaction</th>
                  <th>Due date for next interaction</th>
                  <th>Stage</th>
                  <th>Interaction</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% garden.forEach(plant=> { %>
                <tr>
                  <td><%= plant.plant_name%></td>
                  <td><%= plant.last_interaction%></td>
                  <td><%= plant.due_date %></td>
                  <td><%= plant.stage %></td>
                  <td><%= plant.interaction %></td>
                  <td>
                    <a class="edit-delete" onClick="onEdit(this)">Edit</a>
                    <a class="edit-delete" onClick="onDelete(this)">Delete</a>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </li>
        </ul>
      </section>
    </div>

    <footer>
      <p>Web project 2022 Faculty of Computer Science Ia»ôi</p>
      <br />
      <p id="copyright">&copy; All Rights Reserved</p>
    </footer>

    <script src="../scripts/garden_manager.js" defer></script>
  </body>
</html>
